@model FastDeploy.Models.UserLoginModel

@{
    ViewData["Title"] = "Fast Deploy Login";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<div class="inner-wrap">
    <div class="wrap-fluid">
        <br>
        <br>
        <!-- Container Begin -->
        <div class="large-offset-4 large-4 columns">
            <div class="box bg-white">
                <!-- Profile -->
                <div class="profile">
                    <img alt="" class="" src="~/images/deployment-logo.png">
                    <h3>FAST DEPLOY <small>1.0</small></h3>

                </div>
                <!-- End of Profile -->
                <!-- /.box-header -->
                <div class="box-body " style="display: block;">
                    <div class="row">

                        <div class="large-12 columns">
                            <div class="row">
                                <div class="fd-signup-panel">
                                    <p class="welcome"> Welcome to Fast Deploy!</p>
                                    <form id="form_login" enctype="multipart/form-data" asp-controller="Home" asp-action="Login" method="post">
                                        <div class="row collapse">
                                            <div class="columns small-2">
                                                <span class="prefix bg-green"><i class="text-white dripicons-user"></i></span>
                                            </div>
                                            <div class="columns small-10">
                                                <input id="tbx_username" type="text" placeholder="Username">
                                            </div>
                                        </div>
                                        <div class="row collapse">
                                            <div class="columns small-2">
                                                <span class="prefix bg-green"><i class="text-white dripicons-lock"></i></span>
                                            </div>
                                            <div class="small-10 columns" style="position: relative;">
                                                <input id="tbx_password" type="password" placeholder="Password">
                                                <i class="fa fa-eye-slash icon-show-hide-password"></i>
                                            </div>
                                        </div>
                                    </form>
                                    <p>
                                        Already have an account? <a href="#">Forgot password ?</a>
                                    </p>
                                    <div class="bg-green">
                                        <span class="btn-signin bg-green" onclick="form_login_submit(event)">Sign in</span>
                                    </div>
                                </div>
                            </div>

                        </div>



                    </div>


                </div>
                <!-- end .timeline -->
            </div>
            <!-- box -->
        </div>
    </div>
    <!-- End of Container Begin -->
</div>

<script src="~/js/login.js"></script>